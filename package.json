{
  "name": "jobnik-manager",
  "version": "0.0.1",
  "description": "This is jobnik management server",
  "main": "./src/index.ts",
  "scripts": {
    "test:unit": "jest --config=./tests/configurations/unit/jest.config.js",
    "test:integration": "jest --config=./tests/configurations/integration/jest.config.js",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint:openapi": "openapi lint ./openapi3.yaml",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "tsc --noEmit && npm run test:unit && npm run test:integration",
    "prebuild": "npm run clean && npm run migration:generate-types",
    "build": "tsc --project tsconfig.build.json && npm run prisma:copy && tsc-alias -p tsconfig.build.json && npm run assets:copy",
    "start": "npm run build && cd dist && node --import ./instrumentation.mjs ./index.js",
    "start:dev": "npm run build && cd dist && cross-env CONFIG_OFFLINE_MODE=true  node --enable-source-maps --import ./instrumentation.mjs ./index.js",
    "assets:copy": "copyfiles -f ./config/* ./dist/config && copyfiles -f ./openapi3.yaml ./dist/ && copyfiles ./package.json dist && copyfiles -f ./src/db/prisma/migrations/** ./dist/db/prisma/migrations",
    "prisma:copy": "node ./scripts/copyDirectories.mjs ./src/db/prisma/generated ./dist/db/prisma/generated",
    "clean": "rimraf dist",
    "generate:openapi-types": "openapi-helpers ./openapi3.yaml ./src/openapi.d.ts --format --add-typed-request-handler",
    "prepare": "node .husky/install.mjs",
    "migration:validate": "npx prisma validate --schema ./src/db/prisma/schema.prisma  ",
    "migration:format": "npx prisma format --check --schema ./src/db/prisma/schema.prisma  ",
    "migration:format-fix": "npx prisma format --schema ./src/db/prisma/schema.prisma  ",
    "migration:dev": "npx prisma migrate dev --schema ./src/db/prisma/schema.prisma",
    "migration:generate": "npx prisma migrate dev --schema ./src/db/prisma/schema.prisma --name ",
    "migration:generate-types": "npx prisma generate --schema ./src/db/prisma/schema.prisma",
    "migration:deploy": "npx prisma migrate deploy --schema ./src/db/prisma/schema.prisma"
  },
  "directories": {
    "test": "tests"
  },
  "author": "MapColonies",
  "license": "ISC",
  "dependencies": {
    "@godaddy/terminus": "^4.12.1",
    "@map-colonies/config": "^3.0.1",
    "@map-colonies/error-express-handler": "^3.0.0",
    "@map-colonies/express-access-log-middleware": "^3.0.1",
    "@map-colonies/js-logger": "^2.0.0",
    "@map-colonies/openapi-express-viewer": "^4.0.0",
    "@map-colonies/read-pkg": "^1.0.0",
    "@map-colonies/schemas": "^1.12.1",
    "@map-colonies/telemetry": "^10.0.1",
    "@opentelemetry/api": "^1.9.0",
    "@prisma/adapter-pg": "^6.11.0",
    "@prisma/client": "^6.11.0",
    "@prisma/instrumentation": "^6.12.0",
    "compression": "^1.8.0",
    "express": "^4.21.2",
    "express-openapi-validator": "^5.4.7",
    "http-status-codes": "^2.3.0",
    "lodash": "^4.17.21",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "xstate": "^5.19.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@faker-js/faker": "^9.9.0",
    "@map-colonies/commitlint-config": "^1.1.1",
    "@map-colonies/eslint-config": "^6.0.0",
    "@map-colonies/infra-copilot-instructions": "^1.2.0",
    "@map-colonies/openapi-helpers": "^2.0.0",
    "@map-colonies/prettier-config": "^0.0.1",
    "@map-colonies/tsconfig": "^1.0.1",
    "@redocly/cli": "^1.34.0",
    "@swc/core": "^1.11.13",
    "@swc/jest": "^0.2.37",
    "@types/compression": "^1.7.5",
    "@types/config": "^3.3.5",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.23.0",
    "eslint-plugin-jest": "^28.11.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-create-mock-instance": "^2.0.0",
    "jest-extended": "^5.0.3",
    "jest-html-reporters": "^3.1.7",
    "jest-openapi": "^0.14.2",
    "prettier": "^3.3.3",
    "pretty-quick": "^4.1.1",
    "prisma": "^6.11.0",
    "prisma-json-types-generator": "^3.5.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "tsc-alias": "^1.8.11",
    "type-fest": "^4.38.0",
    "typescript": "^5.8.2",
    "zx": "^8.7.1"
  }
}
